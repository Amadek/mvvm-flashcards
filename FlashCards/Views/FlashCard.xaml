<UserControl x:Class="FlashCards.Views.FlashCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlashCards.Views"
             mc:Ignorable="d" 
             d:DesignHeight="320" d:DesignWidth="340">
    <StackPanel Background="WhiteSmoke">
        <!--<Menu DockPanel.Dock="Top" Background="LightGray">
            <MenuItem Header="_Menu" Background="LightGray" Foreground="White">
                <MenuItem Header="_Otwórz plik" Command="{Binding FileCommand}" Background="White" Foreground="Black"/>
            </MenuItem>
        </Menu>-->
        <TabControl Margin="10,0,10,0" Background="WhiteSmoke">
            <TabItem Header="Fiszki">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding FlashCardVM.FlierKey}"/>
                    <Button Margin="0,10,5,0" Grid.Row="1" Grid.Column="0" Command="{Binding FlashCardVM.NextCommand}">Wiem</Button>
                    <Button Margin="5,10,5,0" Grid.Row="1" Grid.Column="1" Command="{Binding FlashCardVM.ShowCommand}">Sprawdź</Button>
                    <Button Margin="5,10,0,0" Grid.Row="1" Grid.Column="2" Command="{Binding FlashCardVM.DontKnowCommand}">Nie wiem</Button>
                </Grid>
            </TabItem>
            <TabItem Header="Moje kategorie">
                <Grid Height="220">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ListBox x:Name="UnitBox" Grid.Row="0" Grid.ColumnSpan="2" ItemsSource="{Binding FlashCardVM.UnitsBox}"/>
                    <Button Margin="0,20,10,0" Grid.Row="1" Grid.Column="0" Command="{Binding FlashCardVM.LoadCommand}" CommandParameter="{Binding ElementName=UnitBox, Path=SelectedItem}">Załaduj</Button>
                    <Button Margin="10,20,0,0" Grid.Row="1" Grid.Column="1" Command="{Binding FlashCardVM.FileCommand}">Otwórz plik</Button>
                </Grid>
            </TabItem>
        </TabControl>
    </StackPanel>
</UserControl>
