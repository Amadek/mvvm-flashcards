<Window x:Class="FlashCards.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlashCards"
        mc:Ignorable="d"
        Title="MainWindow" Height="320" Width="340">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="35"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="23"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="TextBox_FileName" Grid.Column="0" Margin="0,0,5,0" Text="{Binding FileName}"/>
        <Button Margin="0,0,5,0" Grid.Column="1" Click="btnOpenFile_Click">...</Button>
        <Button Grid.Column="2" Command="{Binding CMD}" CommandParameter="{Binding ElementName=TextBox_FileName, Path=Text}">Wczytaj</Button>
    </Grid>
</Window>
